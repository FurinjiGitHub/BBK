<phone:PhoneApplicationPage
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity" xmlns:ec="clr-namespace:Microsoft.Expression.Interactivity.Core;assembly=Microsoft.Expression.Interactions"
    x:Class="BBK.KickOff3"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    mc:Ignorable="d"
    shell:SystemTray.IsVisible="True"
    
    >

    <!--LayoutRoot is the root grid where all page content is placed-->
    <Grid x:Name="LayoutRoot" Background="{StaticResource taustakuva}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel Grid.Row="0" Margin="12,17,0,28">
            <TextBlock Text="Blood Bowl Kick Starter - Page 4/7" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock Text="The Kick-Off" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}" />
        </StackPanel>

        <!--ContentPanel - place additional content here-->
        <Grid x:Name="ContentPanel" Grid.Row="1" Margin="12,0,12,0">


            <TextBlock HorizontalAlignment="Left" 
                       Margin="10,10,0,0" 
                       TextWrapping="Wrap" 
        		       Text="Here we determinate where the ball will land.  Place the device on the board and then press the Kick button. Then move the ball as instructed." 
        		        VerticalAlignment="Top"/>
            
            <!--Taustaruudukko, joka osoittaa pallon liikesuunnan muuttamalla vastaavan ruudun vaaleaksi-->
            <!--Pallon aloitusruutu keskellä kaaviota-->
            <Rectangle Fill="White" 
                       HorizontalAlignment="Left" 
                       Height="100" 
                       Margin="174,195,0,0" 
                       Stroke="Black" 
                       VerticalAlignment="Top" 
                       Width="100" 
                       Opacity="0.7"/>
            
            <!--Numeroidut ruudut-->
            <Rectangle x:Name="ruutu1" 
                       Fill="White" 
                       HorizontalAlignment="Left" 
                       Height="100" 
                       Margin="74,95,0,0" 
                       Stroke="Black" 
                       VerticalAlignment="Top" 
                       Width="100"
                       Visibility="Collapsed"
                       Opacity="0.7"/>
            <Rectangle x:Name="ruutu2"  
                       Fill="White"  
                       HorizontalAlignment="Left" 
                       Height="100" 
                       Margin="174,95,0,0" 
                       Stroke="Black" 
                       VerticalAlignment="Top" 
                       Width="100"
                       Visibility="Collapsed"
                       Opacity="0.7"/>
            <Rectangle x:Name="ruutu3" 
                       Fill="White" 
                       HorizontalAlignment="Left" 
                       Height="100" 
                       Margin="274,95,0,0" 
                       Stroke="Black" 
                       VerticalAlignment="Top" 
                       Width="100"
                       Visibility="Collapsed"
                       Opacity="0.7"/>
            <Rectangle x:Name="ruutu4" 
        		        Fill="White" 
        		        HorizontalAlignment="Left" 
        		        Height="100" 
        		        Margin="74,195,0,0" 
        		        Stroke="Black" 
        		        VerticalAlignment="Top" 
        		        Width="100"
        		        Visibility="Collapsed"
        		        Opacity="0.7"/>
            <Rectangle x:Name="ruutu5"  
        		        Fill="White" 
        		        HorizontalAlignment="Left" 
        		        Height="100" 
        		        Margin="274,195,0,0" 
        		        Stroke="Black" 
        		        VerticalAlignment="Top" 
        		        Width="100"
        		        Visibility="Collapsed"
        		        Opacity="0.7"/>
            <Rectangle x:Name="ruutu6" 
        		        Fill="White" 
        		        HorizontalAlignment="Left" 
        		        Height="100" 
        		        Margin="74,295,0,0" 
        		        Stroke="Black" 
        		        VerticalAlignment="Top" 
        		        Width="100"
        		        Visibility="Collapsed"
        		        Opacity="0.7"/>
            <Rectangle x:Name="ruutu7" 
        		        Fill="White" 
        		        HorizontalAlignment="Left" 
        		        Height="100" 
        		        Margin="174,295,0,0" 
        		        Stroke="Black" 
        		        VerticalAlignment="Top" 
        		        Width="100"
        		        Visibility="Collapsed"
        		        Opacity="0.7"/>
            <Rectangle x:Name="ruutu8"  
        		        Fill="White" 
        		        HorizontalAlignment="Left" 
        		        Height="100" 
        		        Margin="274,295,0,0" 
        		        Stroke="Black" 
        		        VerticalAlignment="Top" 
        		        Width="100"
        		        Visibility="Collapsed"
        		        Opacity="0.7"/>

            <Image Source="Assets/bbScatterPP.png" 
                   HorizontalAlignment="Left" 
                   Height="300" 
                   Margin="74,95,0,0" 
                   VerticalAlignment="Top" 
                   Width="300"/>
            
            <Button x:Name="KickButton" 
                    Content="kick" 
                    HorizontalAlignment="Left" 
                    Margin="39,471,0,0" 
                    VerticalAlignment="Top" 
                    Click="Button_Click"/>

            <TextBlock x:Name="KickDirection" 
                       HorizontalAlignment="Left" 
                       Margin="146,471,0,0" 
                       TextWrapping="Wrap" 
                       Text="Direction:" 
                       VerticalAlignment="Top" 
                       Width="228"/>
            <TextBlock x:Name="KickLenght" 
                       HorizontalAlignment="Left" 
                       Margin="146,498,0,0" 
                       TextWrapping="Wrap" 
                       Text="Length:" 
                       VerticalAlignment="Top" 
                       Width="228"/>

           
            <CheckBox x:Name="Skill" 
                      Content="check this if Kick skill in use" 
                      HorizontalAlignment="Left" 
                      Margin="39,399,0,0" 
                      VerticalAlignment="Top" 
                      Checked="CheckBox_Checked" 
                      Width="381"/>

            <Button x:Name="done" 
                    Content="done" 
                    HorizontalAlignment="Left" 
                    Margin="341,525,0,0" 
                    VerticalAlignment="Top" 
                    Width="105" 
                    IsEnabled="False">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Click">
                        <ec:NavigateToPageAction TargetPage="/Weather4.xaml"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </Button>
            

        </Grid>
    </Grid>

</phone:PhoneApplicationPage>